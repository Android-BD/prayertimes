<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff" >

    <Button
        android:id="@+id/notCorrectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="No thanks,don't change my city" />

    <Button 
        android:id="@+id/findCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/notCorrectButton"
        android:layout_alignRight="@+id/notCorrectButton"
        android:layout_below="@+id/notCorrectButton"
        android:gravity="center"
        android:text="Yes,Search using Internet" />

    <Button
        android:id="@+id/correctButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/findCity"
        android:layout_alignRight="@+id/findCity"
        android:layout_below="@+id/findCity"
        android:text="Yes,Search without Internet" />

    <TextView
        android:id="@+id/dlgMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:text="Your Current City is Makkah , Do You want to change it?"
        android:textColor="#777" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dlgMsg"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/progressBar1"
        android:layout_below="@+id/progressBar1"
        android:text=" Riyadh "
        android:textColor="#000" />

</RelativeLayout>